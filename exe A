#include <bits/stdc++.h>
using namespace std;

int main()
{
    long int n; cin >> n;
    long int k4,k2; cin >> k4 >> k2;
    if(k4 != 0 && n % (4 * k4)  == n || k4 != 0 && n % (4 * k4) == 0 )
    {
        if(n - (n / 4 * 4 ) == 0 ) { cout << n / 4; }
        else { cout << n / 4 + 1; }
    }
    else
    {
        int n2 = n - (k4 * 4);
        cout << '*';
        if(k2 != 0 && n2 % (2 * k2)  == n2 || k2 != 0 && n2 % (2 * k2)  == 0 && n2 - 2 * k2 == 0)
        {
            if(n2 - (n2 / 2 * 2 ) == 0 ) { cout << n2 / 2 + k4; }
            else { cout << n2 / 2 + 1 + k4; }
        }
        else { cout << -1; }
    }
    return 0;
}
//10000000000 0 10000000000
